<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_msg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nexuslink.cyclenavi.View.Impl.Activities.MsgActivity">
   <android.support.v7.widget.CardView
       android:id="@+id/changeMsgCardView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardCornerRadius="5dp"
       android:layout_margin="5dp"
       >
      <TextView
          android:id="@+id/changeMsg"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:text="修改预存紧急联系电话号码"
          android:textSize="15sp"
          android:textColor="@color/black"
          android:paddingLeft="@dimen/activity_horizontal_margin"
          android:gravity="start|center_vertical"
          android:clickable="true"
          />
   </android.support.v7.widget.CardView>
   <android.support.v7.widget.CardView
       android:id="@+id/title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardCornerRadius="5dp"
       android:layout_margin="5dp"
       android:layout_below="@+id/changeMsgCardView"
       >
      <TextView
          android:id="@+id/saveMsgInfo"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:text="预设短信内容"
          android:textSize="15sp"
          android:textColor="@color/black"
          android:paddingLeft="@dimen/activity_horizontal_margin"
          android:gravity="start|center_vertical"
          android:clickable="true"
          />
   </android.support.v7.widget.CardView>
   <android.support.v7.widget.CardView
       android:id="@+id/inputMsgContent"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardCornerRadius="5dp"
       android:layout_margin="5dp"
       android:layout_below="@+id/title"
       >
         <EditText
             android:id="@+id/msgContent"
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:textSize="15sp"
             android:textColor="@color/black"
             android:gravity="left"
             />
   </android.support.v7.widget.CardView>
   <ng.max.slideview.SlideView
       android:id="@+id/slideViewMsg"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/inputMsgContent"
       android:layout_margin="5dp"
       app:buttonBackgroundColor="@color/white"
       app:slideBackgroundColor="@color/insideBlue"
       app:slideText="send"
       app:slideTextColor="@color/white"
    />
</RelativeLayout>
