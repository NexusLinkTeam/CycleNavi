<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:elevation="2dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_margin="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_photo"
                    android:src="@drawable/default_photo"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />
                <TextView
                    android:id="@+id/user_name"
                    android:alpha="0.8"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/user_photo"
                    android:textStyle="bold"
                    android:text="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/article_time"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="12:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:id="@+id/user_content"
                android:lineSpacingExtra="2dp"
                android:alpha="0.8"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:text="测测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试试"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_photos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/num_replay"
                    android:layout_alignParentRight="true"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/num_replay"
                    android:layout_marginTop="1.5dp"
                    android:src="@drawable/replay"
                    android:id="@+id/comment"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@id/comment"
                    android:text="0"
                    android:id="@+id/num_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/like"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/unlike"
                    android:layout_toLeftOf="@id/num_like"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>